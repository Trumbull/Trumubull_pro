<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/price_position"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <!-- we add graph view to display -->

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/id_order"
        android:layout_marginRight="45dp" >
    </RelativeLayout>
    <!-- android:layout_alignTop="@+id/relativeLayout1" -->

    <TextView
        android:id="@+id/id_order"
        android:layout_width="70dp"
        android:layout_height="28dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/relativeLayout1"
        android:gravity="left"
        android:textSize="20dip" />

    <TextView
        android:id="@+id/begin_price"
        android:layout_width="70dp"
        android:layout_height="32dp"
        android:layout_below="@+id/view_order"
        android:textSize="20dip" />

    <TextView
        android:id="@+id/price_change"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_above="@+id/end_price"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/price_change"
        android:layout_marginLeft="22dp"
        android:layout_toRightOf="@+id/stop_loss_textview" />

    <TextView
        android:id="@+id/view_order"
        android:layout_width="40dp"
        android:layout_height="28dp"
        android:layout_alignBaseline="@+id/id_order"
        android:layout_alignBottom="@+id/id_order"
        android:layout_toRightOf="@+id/relativeLayout1"
        android:textSize="20dip" />

    <TextView
        android:id="@+id/stop_loss_textview"
        android:layout_width="50dp"
        android:layout_height="28dp"
        android:layout_alignBottom="@+id/textView1"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@+id/end_price"
        android:textSize="20dip" />

    <TextView
        android:id="@+id/volume_order"
        android:layout_width="50dp"
        android:layout_height="32dp"
        android:layout_alignBottom="@+id/view_order"
        android:layout_toRightOf="@+id/view_order"
        android:textSize="20dip" />

    <TextView
        android:id="@+id/stop_loss_order"
        android:layout_width="50dp"
        android:layout_height="32dp"
        android:layout_alignBottom="@+id/end_price"
        android:layout_alignTop="@+id/end_price"
        android:layout_toRightOf="@+id/stop_loss_textview"
        android:textSize="20dip" />

    <TextView
        android:id="@+id/end_price"
        android:layout_width="70dp"
        android:layout_height="32dp"
        android:layout_alignBottom="@+id/begin_price"
        android:layout_alignTop="@+id/begin_price"
        android:layout_toRightOf="@+id/textView1"
        android:textSize="20dip" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="20dp"
        android:layout_height="23dp"
        android:layout_alignLeft="@+id/view_order"
        android:layout_below="@+id/view_order"
        android:textSize="20sp" />

</RelativeLayout>