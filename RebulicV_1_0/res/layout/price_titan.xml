<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/titan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <!-- we add graph view to display -->

    <TextView
        android:id="@+id/quotes_titan"
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="left"
        android:textSize="20dip" />

    <TextView
        android:id="@+id/quotes_titan_2"
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="32dp"
        android:textSize="20dip" />

    <TextView
        android:id="@+id/price_change_titan"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/end_price" />

    <DigitalClock
        android:id="@+id/DigitalClock02"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignLeft="@+id/quotes_titan"
        android:layout_alignRight="@+id/quotes_titan"
        android:layout_below="@+id/quotes_titan"
        android:text="DigitalClock"
        android:textColor="@color/grey"
        android:textColorLink="@color/menu" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:layout_alignBaseline="@+id/DigitalClock02"
        android:layout_alignBottom="@+id/DigitalClock02"
        android:layout_marginRight="38dp"
        android:layout_toLeftOf="@+id/quotes_titan_2"
        android:gravity="left"
        android:text="@string/min_price"
        android:textColor="@color/grey"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/TextView04"
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:layout_alignBaseline="@+id/TextView02"
        android:layout_alignBottom="@+id/TextView02"
        android:layout_alignLeft="@+id/quotes_titan_2"
        android:gravity="left"
        android:text="@string/max_price"
        android:textColor="@color/grey"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/quotes_titan_1"
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:layout_alignBaseline="@+id/quotes_titan_2"
        android:layout_alignBottom="@+id/quotes_titan_2"
        android:layout_alignLeft="@+id/TextView02"
        android:textSize="20dip" />

</RelativeLayout>